<view class="container">
  <view class="page-body">
    <view class="page-section page-section-spacing swiper">
      <swiper indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style="height:{{swiper_height}}" >
        <block wx:for="{{device.image}}" wx:key="*this">
          <swiper-item>
            <image src="{{item}}" class="slide-image" mode="widthFix" bindload="get_height"></image>
          </swiper-item>
        </block>
      </swiper>
      <view class="text-tips"><text>左右滑动可查看更多图片</text></view>
    </view>
    <view class="space-block">
      <view class="space-block-title">{{device.name}}</view>
      <view class="space-item">
        <text class="text-left">可借数量：{{device.left_amount}}</text>
        <text class="text-right">总共数量：{{device.total_amount}}</text>
      </view>
      <text class="text-description">{{device.description}}</text>
    </view>
    <view class="space-block">
      <view class="space-block-title">设备组件</view>
	  	<view class="space-block-content">
      <block wx:for="{{device.components}}" wx:key="id">
        <view class="space-item">
					<text class="text-left">{{item.name}}</text>
					<text class="text-right">x{{item.quantity}}</text>
				</view>
      </block>
			</view>
    </view>
  </view>
</view>